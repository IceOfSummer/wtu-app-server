<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.xds.wtuapp.im.database.UserMessageMapper">

    <select id="queryUnreceivedMessage" resultType="pers.xds.wtuapp.im.database.bean.Message">
        SELECT *
        FROM message
        WHERE uid = #{userid} AND msg_id > (
            SELECT receive_id 're' FROM message_receive WHERE uid = #{userid}
        )
        LIMIT 100
    </select>

</mapper>