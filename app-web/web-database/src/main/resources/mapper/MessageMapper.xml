<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.xds.wtuapp.web.database.mapper.MessageMapper">

    <resultMap id="OfflineMessage" type="pers.xds.wtuapp.web.database.bean.Message">
        <result property="msgId" column="msg_id" jdbcType="INTEGER"/>
        <result property="from" column="from" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="offlineMessageCol">
        msg_id, `from`, content, create_time
    </sql>

    <select id="queryOfflineMessage" resultMap="OfflineMessage">
        SELECT <include refid="offlineMessageCol"/>
        FROM message
        WHERE uid = #{uid} AND msg_id > #{receivedId} LIMIT 50
    </select>
</mapper>