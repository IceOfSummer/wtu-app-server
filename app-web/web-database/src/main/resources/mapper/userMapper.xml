<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.xds.wtuapp.web.database.mapper.UserMapper">

    <select id="findByUsername" resultType="pers.xds.wtuapp.web.database.bean.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectNameAndEmail" resultType="pers.xds.wtuapp.web.database.bean.User">
        SELECT nickname, email FROM user WHERE user_id = #{uid}
    </select>

</mapper>
